# file: Makefile# Build automation for Job Market Analyzer.PHONY: help setup sample run test docker clean all# Default targethelp:	@echo "Job Market Analyzer - Available targets:"	@echo "  make setup     - Install dependencies and download models"	@echo "  make sample    - Generate sample data"	@echo "  make run       - Execute full pipeline"	@echo "  make test      - Run pytest suite"	@echo "  make docker    - Build Docker image"	@echo "  make clean     - Remove generated files"	@echo "  make all       - Setup + sample + run + test"# Setup environmentsetup:	@echo "Setting up environment..."	pip install --upgrade pip	pip install -r requirements.txt	python -m spacy download en_core_web_sm	@echo "Setup complete!"# Generate sample datasample:	@echo "Generating sample data..."	python scripts/data_collection.py --use-sample --output data/raw_jobs.csv	@echo "Sample data created at data/raw_jobs.csv"# Run full pipelinerun:	@echo "Running full pipeline..."	@mkdir -p data exports/tableau_ready exports/by_region	python scripts/data_collection.py --use-sample --output data/raw_jobs.csv	python scripts/preprocess.py --input data/raw_jobs.csv --output data/cleaned_jobs.csv	python scripts/skill_extractor.py --input data/cleaned_jobs.csv --output data/jobs_with_skills.csv	python scripts/skill_cooccurrence.py --input data/jobs_with_skills.csv --output exports/cooccurrence.csv	python scripts/trend_analysis.py --input data/jobs_with_skills.csv --output exports/trends.csv	python scripts/geography_analysis.py --input data/jobs_with_skills.csv --output-dir exports/by_region/	@echo "Pipeline complete! Check exports/ directory for results."# Run teststest:	@echo "Running tests..."	pytest tests/ -v --cov=scripts --cov-report=html --cov-report=term	@echo "Tests complete! Coverage report in htmlcov/index.html"# Build Docker imagedocker:	@echo "Building Docker image..."	docker build -t job-market-analyzer:latest .	@echo "Docker image built successfully!"# Clean generated filesclean:	@echo "Cleaning generated files..."	rm -rf data/raw_jobs.csv data/cleaned_jobs.csv data/jobs_with_skills.csv	rm -rf exports/*.csv exports/*.graphml exports/by_region/*.csv	rm -rf __pycache__ scripts/__pycache__ tests/__pycache__ ner/__pycache__	rm -rf .pytest_cache htmlcov .coverage	rm -rf *.log	@echo "Clean complete!"# Run everythingall: setup sample run test	@echo "All tasks completed successfully!"# Development helperslint:	@echo "Running linters..."	flake8 scripts/ tests/ ner/ --max-line-length=120	mypy scripts/ --ignore-missing-importsformat:	@echo "Formatting code..."	black scripts/ tests/ ner/ --line-length=120# Quick test run with sample dataquick:	@echo "Quick test run..."	python scripts/data_collection.py --use-sample --output data/raw_jobs.csv	python scripts/preprocess.py --input data/raw_jobs.csv --output data/cleaned_jobs.csv	python scripts/skill_extractor.py --input data/cleaned_jobs.csv --output data/jobs_with_skills.csv --no-embeddings	@echo "Quick run complete!"